   <script>
    function clock() {
        let d = new Date();
        let hour = d.getHours();
        let minute = d.getMinutes();
        let seconds = d.getSeconds(); document.getElementById("clock-time").innerHTML= "What time is it? " +"<br/>"+ hour + ":" + minute + ":" + seconds;
    }
    
    setInterval(clock, 1000);
   </script>
